<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diskai | Login/Register</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
</head>

<body>

    <div class="logo flex justify-between px-2">
        <h1 class="font-bolder font-serif">ƒêISKAI</h1>
        <a href="/shop"
            class="font-semibold py-1 px-3 me-3 mt-2 rounded-2xl bg-slate-950 hover:bg-slate-700 text-white">Shop</a>
    </div>
    <!-- flash message setup start -->
    <% if(error && error.length> 0) { %>
        <div class="absolute text-center top-0 left-1/2 px-2 transform -translate-x-1/2 rounded-b-md bg-red-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
        </div>
        <% } %>
            <!-- flash message setup end -->

            <!-- container for 2 parts -->
            <div class="h-96 w-full flex flex-col md:flex-row justify-around items-center">

                <!-- create account part -->
                <div class="w-1/3">
                    <div class="ps-1">
                        <h2 class="text-3xl font-bold">Welcome to <span class="font-bolder text-sky-400">Diskai</span>
                        </h2>
                        <p class="tracking-tight font-medium text-slate-700">Create your account</p>
                    </div>
                    <div class="w-full">
                        <form action="/users/register" method="post">
                            <input type="text" name="fullname" placeholder="Fullname"
                                class="w-full bg-slate-200 m-1 p-2 rounded-sm">
                            <input type="text" name="email" placeholder="Email"
                                class="w-full bg-slate-200 m-1 p-2 rounded-sm">
                            <input type="text" name="password" placeholder="Password"
                                class="w-full bg-slate-200 m-1 mb-3 p-2 rounded-sm">
                            <button type="submit"
                                class="text-white font-normal bg-blue-500 px-4 py-1.5 m-1 rounded-3xl text-center">Create
                                Account
                            </button>
                        </form>
                    </div>
                </div>

                <!-- login part -->
                <div class="w-1/3">
                    <div class="ps-1">
                        <h2 class="text-2xl font-bold">Login Your Account</h2>
                    </div>
                    <div class="w-full">
                        <form action="/users/login" method="post">
                            <input type="text" name="email" placeholder="Email"
                                class="w-full bg-slate-200 m-1 p-2 rounded-sm">
                            <input type="text" name="password" placeholder="Password"
                                class="w-full bg-slate-200 m-1 mb-3 p-2 rounded-sm">
                            <button type="submit"
                                class="text-white font-normal bg-blue-500 px-4 py-1.5 m-1 rounded-3xl text-center">Login
                            </button>
                        </form>
                    </div>
                </div>
            </div>
</body>

</html>